<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- views start -->
        <!-- student form view -->
        <record id="student_form_view" model="ir.ui.view">
            <field name="name">Student Form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <!-- <button name="delete_record" string="Supprimer" type="object" class="danger"/> -->
                        <button name="button_cancel" string="Refuser" type="object"/>
                        <button name="action_paiement_state" string="Demander le paiement" class="oe_highlight" type="object"/>
                        <button name="action_done_state" string="Terminer" class="oe_highlight" type="object"/>
                        <button name="generate_payment_link"
                            type="object"
                            string="Générer lien Stripe"
                            class="btn-primary"/>

                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                        <div class="oe_title">
                            <h3>
                                <field name="name"/>
                                <field name="prenom"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Informations personelles">
                                <field name="gender"/>
                                <field name="student_dob"/>
                                <field name="age"/>
                                <field name="mail"/>
                            </group>
                            <group string="Informations sur les tuteurs">
                                <field name="nom_tuteur"/>
                                <field name="prenom_tuteur"/>
                                <field name="num_tuteur"/>
                                <field name="mail_tuteur"/>                
                            </group>
                            <group string="Autres informations">
                                <field name="adresse"/>
                                <field name="ville"/>
                                <field name="code_postal"/>
                                <field name="droit_image"/>
                            </group>
                            <group string="Documents">
                                <field name="type_inscription"/>
                                <field name="carte_identite" widget="binary" filename="carte_identite_name"/>
                                <field name="carte_identite_name" invisible="1"/>
                                <field name="justificatif_domicile" widget="binary" filename="justificatif_domicile_name"/>
                                <field name="justificatif_domicile_name" invisible="1"/>
                                <field name="certificat_medical" widget="binary" filename="certificat_medical_name"/>
                                <field name="certificat_medical_name" invisible="1"/>
                            </group>
                            <group string="Informations sur le paiement">
                                <field name="paiement"/>
                                <field name="paiement_date"/>
                                <field name="paiement_montant"/>
                                <field name="etat_pack_licence"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- student tree/list view -->
        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">Student Tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="status"/>
                    <field name="name"/>
                    <field name="prenom"/>
                    <field name="age"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <!-- student search view -->
        <record id="student_search_view" model="ir.ui.view">
            <field name="name">Students Search View</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search string="Search Student">
                    <field name="name"/>
                    <field name="age"/>
                    <group expand="1" string="Group By">
                        
                    </group>
                </search>
            </field>
        </record>
        <!-- views end -->

        <!-- window action start -->
        <!-- students action window -->
        <record id="student_menu_action" model="ir.actions.act_window">
            <field name="name">Liste des nouveaux inscrits</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="student_search_view"/>
            <field name="context">{'search_default_male': 1}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Oops, il n'y a pas d'inscrits pour le moment.
                </p>
            </field>
        </record>
        <!-- window action end -->

        <!-- menu start -->
        <!-- top level menu: no parent -->
        <menuitem id="school_menu"
                  name="School"
                  groups="base.group_user"/>

        <!-- the following menuitem should appear *after*
             its parent 'school_menu' and *after* its
             action 'student_menu_action' -->
        <menuitem id="school_student_menu"
                  parent="school_menu"
                  name="Students"
                  groups="base.group_user"
                  action="student_menu_action"/>
        <!-- menu end -->
    </data>
</odoo>
